{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 4,
        "editor.codeActionsOnSave": {
            "source.fixAll": "always"
        }
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 4,
        "editor.codeActionsOnSave": {
            "source.fixAll": "always"
        }
    },
    "eslint.validate": ["typescript", "typescriptreact"]
}
